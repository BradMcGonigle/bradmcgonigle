{
  "ci": {
    "assert": {
      "assertMatrix": [
        {
          "preset": "lighthouse:recommended",
          "assertions": {
            "unused-css-rules": "off",
            "uses-rel-preconnect": "off",
            "redirects-http": ["warn", { "minScore": 0 }],
            "uses-http2": ["warn", { "minScore": 0 }]
          }
        }
      ]
    },
    "collect": {
      "staticDistDir": "./public"
    }
  }
}
